<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Exam</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Exam.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100 bg-dark">
    <header>
        <!--Форма Cтандартная-->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark" style="background-color: #1a1a1a;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Exam</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!--Форма Стандатная home и privacy-->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>

                    <!--Форма карточек из базы данных-->
                    @inject CartService CartService
                    @{
                        var currentController = Context.Request.RouteValues["controller"]?.ToString();
                        var cartItems = CartService.GetCart();
                        int cartCount = cartItems.Sum(i => i.Quantity);
                    }
                    <!--Форма для Заказов аккаунта-->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="me-4">
                            <a class="nav-link text-light" asp-controller="Profile" asp-action="Orders">Мои заказы</a>
                        </div>
                    }

                    <!--Форма для корзины-->
                    <div class="d-flex align-items-center">
                        @if (currentController == "Vehicle")
                        {
                            <div class="d-inline-block me-3 position-relative">
                                <a href="@Url.Action("Cart", "Order")" aria-label="Корзина" class="d-inline-block">
                                    <img src="~/Pictures/cart.png" alt="Корзина" style="width: 24px; height: 24px;" />
                                    @if (cartCount > 0)
                                    {
                                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                            @cartCount
                                            <span class="visually-hidden">товаров в корзине</span>
                                        </span>
                                    }
                                </a>
                            </div>
                        }

                        <!--Форма для аккаунта-->
                        <div>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <span class="navbar-text me-2">Привет, @User.Identity.Name!</span>
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-link nav-link d-inline p-0">Выйти</button>
                                </form>
                            }
                            else
                            {
                                <a class="nav-link d-inline me-2" asp-controller="Account" asp-action="Login">Вход</a>
                                <a class="nav-link d-inline" asp-controller="Account" asp-action="Register">Регистрация</a>
                            }
                        </div>

                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!--Главная-->
    <main role="main" class="flex-grow-1 container pb-5">
        @RenderBody()
    </main>

    <!--Футер-->
    <footer class="footer">
        <div class="container">
            <span>&copy; 2025 – Семён Сабуров – Все права не защищены!</span>
        </div>
    </footer>   

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
